<div class="square">
  <form 
{{#if _id}}
  action="/empleado/{{_id}}/edit" 
{{else}}
  action="/empleado/new"
{{/if}}
method="POST">
  <div>
    <label for="">
      Name:
      <input class="uk-input uk-form-width-medium uk-form-small" type="text" name="name" value="{{name}}">
    </label>
  </div><br>
  <div>
    <label for="">
      Lastname:
      <input class="uk-input uk-form-width-medium uk-form-small" type="text" name="lastname" value="{{lastname}}">
    </label>
  </div><br>
    <div>
      <select class="uk-select" name="role"> 
        <option value="TA">Teacher assistant</option>
        <option value="DEV">Developer</option>
      </select>
  </div><br>
  <button class="uk-button uk-button-default" type="submit">Submit</button>
</form>
</div>
</div>